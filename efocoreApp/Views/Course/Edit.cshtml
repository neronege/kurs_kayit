@model Course

<div class="row">
    <div class="col-6">
<h2>Kurs Güncelle</h2>
<hr />

<form asp-controller="Course" asp-action="Edit" method="post">
    <input type="hidden" asp-for="CourseId" />
    <div class="mb-3">
        <label class="form-label" asp-for="Title">Başlık</label>
        <input class="form-control" asp-for="Title" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
    </div>
    <div class="col-6">
        <h4>Öğrenciler</h4>
        <hr />
        @foreach(var item in Model.CourseRecords)
            {
                <form >
                    
                    <input class="form-control" asp-for="@item.student.FullName"/>
                </form>
            }

    </div>
</div>